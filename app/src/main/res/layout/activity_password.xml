<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.trinetix.app.PasswordActivity">

    <LinearLayout
            android:id="@+id/password_inputs_layout"
            android:weightSum="4"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/passwordInput0"
                style="@style/PasswordInputStyle"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/passwordInput1"
                style="@style/PasswordInputStyle"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/passwordInput2"
                style="@style/PasswordInputStyle"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/passwordInput3"
                style="@style/PasswordInputStyle"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
            android:layout_above="@id/password_inputs_layout"
            android:layout_centerHorizontal="true"
            android:text="@string/password_description"
            android:layout_margin="10dip"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/ok_button"
            android:text="@string/go_for_it"
            android:layout_below="@id/password_inputs_layout"
            android:layout_margin="10dip"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>
